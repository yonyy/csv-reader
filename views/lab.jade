extends ./layout.jade
block append link
	link(href='sb-admin.css', rel='stylesheet')
	link(href="lab.css" rel="stylesheet")
block append script
	script(src="classroom.js")
	script(src="station.js")
block prepend bodyLink
	body(onload="createStationObject(#{numPerStation})")
block labActive
	li(class="active")
		a(href="/createLab")
			i(class="glyphicon glyphicon-console")
			|  Create Lab
block content
	- var total_width = parseInt(width,10)
	- var total_height = parseInt(height,10)
	- numGhosts = totalGhosts
	div(id="page-wrapper")
		div(class="container-fluid")
			div(class="row")
				div(class="col-lg-12")
					h1(class="page-header") Design #[small Begin designing your classroom]
					ol(class="breadcrumb")
						li
							i(class="fa fa-dashboard")
							a(href="/index")  Dashboard
						li(class="active")
							i(class="fa fa-edit")
							|  Create
					p(class="lead") Select "Ghost Seat" to mark a ghost seat
					p(class="lead") Select "Left-Handed" to mark a left-handed seat
			div(class="row")
				div(class="col-md-offset-3 col-lg-6 errorMessage")
			div(class="row")
				div(class="col-lg-12")
					ol(class="breadcrumb")
						li(class="active") 
							span(class="glyphicon glyphicon-wrench")
							|  Classroom Information
					p(class="lead currentDim") Height: #[p.height #{height}] Width: #[p.width #{width}]
					- var totalSeats = height*width
					p(class="lead expectedTotal") Expected Total Seats: #{totalSeats}
					p(class="lead actualTotal") Actual Total Seats: #{totalSeats}
					p(class="lead numPerStation") Students per Station: #{numPerStation}
					p(class="lead totalStudents") Total Students: #{totalStudents}
					p(class="lead instructions") Select Checkboxes to manually number stations or to number stations automatically
			div(class="row")
				div(class="col-md-offset-2 col-lg-2")
					label
						input(type="checkbox", id="increase_option", class="option")
						|  Manually Number
				div(class="col-lg-2")
					label
						input(type="checkbox", id="ghost_option", class="option")
						|  Ghost
				div(class="col-lg-2")
					label
						input(type="checkbox", id="fill_option", class="option", checked)
						|  Automatically Fill
				div(class="col-lg-2")
					label
						input(type="checkbox", id="remove_option", class="option")
						|  Remove Number
				div(class="col-lg-2")
					label
						input(type="checkbox", id="removeAll_option", class="option")
						|  Remove All Number
				script.
					$('input.option').on('change', function() {
						$('input.option').not(this).prop('checked', false);
						console.log($(this).attr('id'));
						if ($(this).attr('id') == "increase_option") {
							if (manIncrease)
								manIncrease = false
							else {
								if (!manualClass)
									clearClass()
								manIncrease = true;
								manualClass = true;
							}
							isGhost = false;
							autoFill = false;
							remove = false;
							removeAll = false;
						} else if ($(this).attr('id') == "ghost_option"){
							if (isGhost)
								isGhost = false
							else 
								isGhost = true;
							manIncrease = false;
							autoFill = false;
							remove = false;
							removeAll = false;
						} else if ($(this).attr('id') == "fill_option"){
							if (autoFill)
								autoFill = false
							else {
								autoFill = true;
								manualClass = false;
								autoFillStation($('p.width').text(), $('p.height').text())
							}
							manIncrease = false;
							isGhost = false;
							remove = false;
							removeAll = false;
						} else if ($(this).attr('id') == "remove_option"){
							if (remove)
								remove = false
							else {
								remove = true;
							}
							manIncrease = false;
							isGhost = false;
							autoFill = false;
							removeAll = false;
						} else if ($(this).attr('id') == "removeAll_option"){
							if (removeAll)
								removeAll = false
							else {
								removeAll = true;
								clearClass()
							}
							remove = false;
							manIncrease = false;
							isGhost = false;
							autoFill = false;
						}
					});

			div(class="row")
				div(class="col-lg-12")
					div(class="panel panel-default")
						div(class="panel-heading")
							h3(class="panel-title")
								span(class="glyphicon glyphicon-th")
								|  #{className}
						//- Contains grid of the classroom
						div(class="panel-body")
							div.gridContainer
								//- Create height x width table cell classroom
								- for (var row = 1; row <= total_height; row++)
									div(class='row row_#{row}')
										- var offset = 0
										- for (var col = 1; col <= total_width; col++)
											- var id = ((row-1)*total_width) + col
											- if (row % 2 == 0)
												- id = ((row-1)*total_width) + total_width - offset
												- offset++
											- console.log(id)
											div(class="grid--item station_item", id="#{id}", onclick="updateStation($(this).attr('id'),#{totalSeats},#{totalStudents}, #{numPerStation})")
												span(class='stationNumber')=id

			//- Contains submit button
			div(class="row")
				div(class="col-md-offset-6 col-lg-4")
					form(class="form", name="edit_submit", action="/seating_chart", method="post", onsubmit="return checkEmptyStations()")
						input(name="className", type="hidden", value="#{className}")
						input(name="totalStudents", type="hidden", value="#{totalStudents}")
						input(name="totalSeats", class="totalSeats", type="hidden", value="#{totalSeats}")
						input(name="width", type="hidden", value="#{width}")
						input(name="height", type="hidden", value="#{height}")
						input(name="students", class="students", type="hidden", value="JSON.stringify(#{students})")
						input(name="gridHTML", class="gridHTML", type="hidden", value="")
						input(name="classroom", class="classroom", type="hidden", value="")
						input(name="seed", type="hidden", value="#{seed}")
						input(name="classType", type="hidden", value="#{classType}")
						button(type="submit", class="btn btn-default submitClass") Submit
					script.
						$('.submitClass').click(function() {
							var finalGridContainer = $('.gridContainer').html();
							//- sessionStorage.setItem('all_seats', JSON.stringify(classroom));
							//- sessionStorage.setItem('width', #{total_width}-1);
							//- sessionStorage.setItem('height', #{total_height}-1);
							//- sessionStorage.setItem('finalGridContainer', finalGridContainer);
							$('.gridHTML').val(JSON.stringify(finalGridContainer))
							$('.classroom').val(JSON.stringify(classroom))
						});
